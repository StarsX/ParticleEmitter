//--------------------------------------------------------------------------------------
// Structs
//--------------------------------------------------------------------------------------
struct VSIn
{
	float3	Pos	: POSITION;
	float3	Nrm	: NORMAL;
};

struct VSOut
{
	float3	Pos	: POSITION;
	uint	VId	: VERTEXID;
};

//--------------------------------------------------------------------------------------
// Constant buffer
//--------------------------------------------------------------------------------------
cbuffer cbPerObject
{
	float4x3	g_transform;
};

//--------------------------------------------------------------------------------------
// Simple transform
//--------------------------------------------------------------------------------------
VSOut main(VSIn input, uint vId : SV_VERTEXID)
{
	VSOut output;

	output.Pos = mul(float4(input.Pos, 1.0), g_transform);
	output.VId = vId;

	return output;
}
